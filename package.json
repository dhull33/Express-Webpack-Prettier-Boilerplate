{
  "name": "a-dope-boilerplate",
  "description": "A boilerplate Express.js project that automatically reformats your code using Prettier and Eslint.",
  "version": "0.1.21",
  "author": "David Hull <hello@iamdavidhull.com>",
  "license": "MIT",
  "keywords": [
    "boilerplate",
    "prettier",
    "webpack",
    "express",
    "eslint",
    "format",
    "javascript",
    "pm2",
    "web",
    "app",
    "node.js",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dhull33/Express-Webpack-Prettier-Boilerplate"
  },
  "bugs": {
    "url": "https://github.com/dhull33/Express-Webpack-Prettier-Boilerplate/issues"
  },
  "main": "bin/cli.js",
  "bin": {
    "a-dope-boilerplate": "./bin/cli.js"
  },
  "preferGlobal": true,
  "scripts": {
    "start": "bin/cli.js",
    "prettier-watch": "onchange '**/*.js' -- prettier --write {{changed}}"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^3.0.2",
    "debug": "^4.1.1"
  },
  "devDependencies": {
    "ajv": "^6.10.2",
    "eslint": "^6.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "babel-plugin-transform-class-properties"
    ]
  }
}
